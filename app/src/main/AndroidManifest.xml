<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelpTounsi"
        tools:targetApi="31">
        <activity
            android:name=".Activites.SearchResults"
            android:exported="false" />
        <activity
            android:name=".Activites.MakeRequestActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activites.MainActivity"
            android:exported="true" />
    </application>

</manifest>